---
import Door from "./Door.astro";
---

<div class="snow">Follow the footprints in the snow ...</div>
<div class="footprint">
  <Door />
</div>
<style>
  .snow {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: white;
    opacity: 0.98;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .footprint {
    position: absolute;
    top: 20px;
    right: 20px;
  }
</style>
